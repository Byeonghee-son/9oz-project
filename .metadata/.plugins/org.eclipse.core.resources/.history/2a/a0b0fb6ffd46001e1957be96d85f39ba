package com.example.oz.controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.oz.domain.Image;
import com.example.oz.repository.ImageRepository;

import lombok.RequiredArgsConstructor;

@RestController
@RequiredArgsConstructor
public class ImageController {
	
	private final ImageRepository imageRepo;
	
	//전체목록 가져오기
	@RequestMapping("/list")
	public Iterable<Image> getImage(){
		return imageRepo.findAll();
	}
	
	//Top부분
	@RequestMapping("/list/top")
	public Iterable<Image> getImageTop(){
		return imageRepo.findByMainclass("top");
	}
	@RequestMapping("/list/top/tshirt")
	public Iterable<Image> getImageTopTshirt(){
		return imageRepo.findBysemiclass("tshirt");
	}
	@RequestMapping("/list/top/tshirt")
	public Iterable<Image> getImageTopTshirtsleeveless(){
		return imageRepo.findBysemiclass("tshirtsleeveless");
	}
	@RequestMapping("/list/top/knit")
	public Iterable<Image> getImageTopKnit(){
		return imageRepo.findBysemiclass("knit");
	}
	@RequestMapping("/list/top/knitsleeveless")
	public Iterable<Image> getImageTopKnitsleeveless(){
		return imageRepo.findBysemiclass("knitsleeveless");
	}
	@RequestMapping("/list/top/blouse")
	public Iterable<Image> getImageTopBlouse(){
		return imageRepo.findBysemiclass("blouse");
	}
	@RequestMapping("/list/top/tshirt")
	public Iterable<Image> getImageTopTshirt(){
		return imageRepo.findBysemiclass("tshirt");
	}
	@RequestMapping("/list/top/cardigan")
	public Iterable<Image> getImageTopCardigan(){
		return imageRepo.findBysemiclass("cardigan");
	}
	
	//bottom 부분 가져오기
	@RequestMapping("/list/bottom")
	public Iterable<Image> getImageBottom(){
		return imageRepo.findBymainclass("bottom");
	}
	
	
}
